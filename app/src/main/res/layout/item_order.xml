<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70ssp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_3ssp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_black">

            <ImageView
                android:id="@+id/imgic"
                android:layout_width="@dimen/_70ssp"
                android:layout_height="@dimen/_70ssp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/line_righ"
                android:paddingRight="@dimen/_15sdp"
                android:src="@drawable/ic_order" />

            <TextView
                android:id="@+id/txttotalorder"
                android:layout_width="@dimen/_22ssp"
                android:layout_height="@dimen/_22ssp"
                android:layout_alignRight="@+id/imgic"
                android:layout_alignBottom="@+id/imgic"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/custom_circle"
                android:gravity="center"
                android:text="1"
                android:textAllCaps="true"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/_30ssp"
                android:layout_toRightOf="@+id/imgic"
                android:ellipsize="end"
                android:maxLines="1"

                android:text="sadsdsdsadsdsdsdsdsdsdsdsd"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/texttotalorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtname"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginRight="@dimen/_20ssp"
                android:layout_toRightOf="@+id/imgic"
                android:text=""
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_5ssp"
                android:layout_marginRight="@dimen/_20ssp"
                android:text="20/1"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:background="@drawable/rectangular_line"
                    android:padding="@dimen/_3sdp"
                    android:text="sdfsdfsdf"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_yes"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/ic_yes"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_no"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/ic_no"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>